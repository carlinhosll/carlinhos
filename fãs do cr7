</svg>
"""

# Prepare gallery folder
galeria_dir = os.path.join(assets_dir, "galeria")
os.makedirs(galeria_dir, exist_ok=True)

# Write files
files = {
    os.path.join(base_dir, "index.html"): index_html,
    os.path.join(base_dir, "styles.css"): styles_css,
    os.path.join(base_dir, "script.js"): script_js,
    os.path.join(base_dir, "README.md"): readme_md,
    os.path.join(assets_dir, "favicon.svg"): favicon_svg,
    os.path.join(assets_dir, "hero-placeholder.webp"): hero_placeholder_svg,  # placeholder (SVG content with .webp name)
}

for path, content in files.items():
    with open(path, "w", encoding="utf-8") as f:
        f.write(content)

# Create a .zip
zip_path = "/mnt/data/cr7-github-site.zip"
with zipfile.ZipFile(zip_path, "w", zipfile.ZIP_DEFLATED) as z:
    for root, dirs, filenames in os.walk(base_dir):
        for name in filenames:
            full = os.path.join(root, name)
            arc = os.path.relpath(full, base_dir)
            z.write(full, arcname=arc)

zip_path
